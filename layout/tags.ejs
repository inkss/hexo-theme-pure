<main class="main" role="main">
  <article class="article article-tags post-type-list" itemscope="">
    <header class="article-header">
      <h1 itemprop="name" class="hidden-xs">
        <%= page.title %>
      </h1>
      <p class="text-muted hidden-xs">
        <%= _p('total.tag', site.tags.length) %>
      </p>
      <nav role="navigation" id="nav-main" class="okayNav">
        <ul>
          <li><a href="/tags">
              <%= __('nav.all') %></a></li>
          <% site.tags.each(function(item){ %>
          <li><a href="/<%= item.path %>">
              <%= item.name %></a></li>
          <% }) %>
        </ul>
      </nav>
    </header>
    <!-- /header -->
    <div class="article-body">
      <div class="row" style="line-height: 40px;">
        <% site.tags.each(function(item){ %>
        <div class="col-md-6" >
          <a href="<%- url_for(item.path) %>" title="#<%= item.name %>">
            <i class="icon icon icon-tags"></i>
            <%= item.name %>
            <small class="text-muted">(Total
              <%= item.posts.length %> articles)</small>
          </a>
        </div>
        <% }) %>
      </div>
    </div>
  </article>
</main>
